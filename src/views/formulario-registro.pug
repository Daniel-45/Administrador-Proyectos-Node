doctype html
html(lang="es")
    head
        include partials/header

    body.login 
        .contenedor-formulario 
            h1 Crear Cuenta

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            div 
                                p.alerta(class=`${categoria}`)= error
                    
            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo 
                    label(for="email") E-mail
                    input(type="email" name="email" placeholder="name@example.com" value= email)
                
                .campo 
                    label(for="password") Contraseña
                    input(type="password" name="password" placeholder="Contraseña" value= password)

                .campo.enviar 
                    input.boton(type="submit" value="Crear Cuenta")
                
                .campo 
                    a(href="/iniciar-sesion") Iniciar Sesión